{
    "compilerOptions": {
        "allowSyntheticDefaultImports": true,
        "declaration": false,
        "target": "es5",
        "module": "es2015",
        "moduleResolution": "node",
        "sourceMap": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "baseUrl": "",
        "paths": {},
        "noImplicitAny": false,
        "removeComments": false,
        "suppressImplicitAnyIndexErrors": true,
        "outDir": "dist",
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules"
    ],
    "include": [
        "src/*.ts"
    ]
}